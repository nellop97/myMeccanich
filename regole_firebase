// storage.rules - Firebase Storage Rules per MyMeccanich
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Funzione helper per verificare se l'utente è autenticato
    function isAuthenticated() {
      return request.auth != null;
    }

    // Funzione helper per verificare se l'utente è il proprietario
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Funzione helper per verificare il tipo di file
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Funzione helper per verificare la dimensione del file (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Documenti utente - solo il proprietario può leggere/scrivere
    match /documents/{userId}/{document=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isValidSize();
    }

    // Foto veicoli - il proprietario può gestire
    match /vehicles/{userId}/{vehicleId}/photos/{photo} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isImage() && isValidSize();
      allow delete: if isOwner(userId);
    }

    // Foto profilo utente
    match /users/{userId}/profile/{image} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) && isImage() && isValidSize();
      allow delete: if isOwner(userId);
    }

    // Foto riparazioni/interventi (per meccanici)
    match /repairs/{repairId}/photos/{photo} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isImage() && isValidSize();
      allow delete: if isAuthenticated();
    }

    // Allegati fatture
    match /invoices/{invoiceId}/attachments/{attachment} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidSize();
      allow delete: if isAuthenticated();
    }

    // Backup generali (solo admin - da implementare)
    match /backups/{backup=**} {
      allow read: if false; // Solo admin
      allow write: if false; // Solo admin
    }

    // Cartella temporanea per upload in corso
    match /temp/{userId}/{tempFile} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isValidSize();
      // I file temporanei vengono eliminati automaticamente dopo 24 ore
      allow delete: if isOwner(userId);
    }
  }
}