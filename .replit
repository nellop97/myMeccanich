modules = ["nodejs-20", "ruby-3.2", "swift-5.8"]
run = "npm run start"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run start"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8081
externalPort = 80

[[ports]]
localPort = 8082
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DevServer"

[[workflows.workflow]]
name = "DevServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --port 5000 --web --clear"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
